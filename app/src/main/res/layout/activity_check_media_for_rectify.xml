<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    tools:context=".activity.CheckMediaForRectifyActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_checkmedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/AppTheme.PopupOverlay"
            android:background="?attr/colorPrimary">

                <TextView
                    android:text="12"
                    android:layout_weight="3"
                    android:id="@+id/toolbar_checkmedia_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/white" />

        </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:padding="3dp"
                    android:background="@drawable/bg_textview_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="2dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="检查项名称："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text=" "
                        android:padding="2dp"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/check_media_title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:padding="3dp"
                    android:background="@drawable/bg_textview_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="整改问题描述："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="1dp"
                        android:text=""
                        android:padding="2dp"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/check_media_content_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:padding="3dp"
                    android:background="@drawable/bg_textview_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="隐患等级："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="1dp"
                        android:text="描述"
                        android:padding="2dp"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/check_media_yinhuanlevel_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="2dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:padding="3dp"
                    android:background="@drawable/bg_textview_border"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="1dp"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:text="整改方式："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="1dp"
                        android:text="描述"
                        android:padding="2dp"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/check_media_changway_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:id="@+id/check_image_lin"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:padding="3dp"
                android:background="@drawable/bg_textview_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:text="取证的内容："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.neu.test.layout.MyGridView
                    android:id="@+id/check_image_gridview"
                    android:numColumns="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.neu.test.layout.MyGridView>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/check_video_lin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:text="现场视频："
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.neu.test.layout.MyGridView
                    android:id="@+id/check_video_gridview"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.neu.test.layout.MyGridView>
                
                <RelativeLayout
                    android:visibility="gone"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/check_video_recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>


                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_marginTop="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/check_media_back_button"
                android:background="@drawable/bg_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:text="返回" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>