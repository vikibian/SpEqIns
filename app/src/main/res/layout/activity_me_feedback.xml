<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MeFeedbackActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/about_appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/me_feedback_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/colorPrimary"
                    app:titleTextColor="@color/white"
                    android:gravity="center"
                    app:theme="@style/AppTheme.PopupOverlay"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <TextView
                        android:id="@+id/me_feedback_toolbar_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1233"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="15dp"

                        />

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <EditText
                        android:layout_margin="10dp"
                        android:id="@+id/me_feedback_edittext"
                        android:selectAllOnFocus="true"
                        android:minLines="5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="您有什么意见..."/>


                </RelativeLayout>


                <top.androidman.SuperButton
                    android:layout_marginTop="60dp"
                    android:id="@+id/me_feedback_sb_submit"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    app:corner="10dp"
                    app:text="提交"
                    app:textSize="20dp"
                    app:textColor="@color/black"
                    app:color_normal="@color/div_white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>