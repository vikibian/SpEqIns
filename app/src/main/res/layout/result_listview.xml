<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yyydjk.library.DropDownMenu
            android:focusable="false"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dropdownmenu"
            app:ddtextSelectedColor="@color/drop_down_selected"
            app:ddtextUnselectedColor="@color/drop_down_unselected"
            app:ddmenuSelectedIcon="@color/drop_down_selected"
            app:ddmenuUnselectedIcon="@color/drop_down_unselected"
            app:ddmaskColor="@color/mask_color"
            app:ddmenuTextSize="12dp"
            app:ddmenuBackgroundColor="@color/white"
            app:dddividerColor="@color/gray"
            app:ddunderlineColor="@color/gray"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:padding="5dp"
            android:id="@+id/show_searched_result_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>


</LinearLayout>