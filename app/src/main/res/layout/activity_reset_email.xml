<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".activity.ResetEmailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/me_resetemail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:theme="@style/AppTheme.PopupOverlay"
                android:background="?attr/colorPrimary">

                <TextView
                    android:id="@+id/me_resetemail_toolbar_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="标题"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_weight="1.13"
                            android:text="邮   箱："
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:id="@+id/me_resetemail_older"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="11"
                            android:background="@color/white"
                            android:maxLines="1"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:visibility="gone"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/me_resetemail_showemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">


                        <TextView
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="新邮箱："
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <EditText
                            android:id="@+id/me_resetemail_newer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="11"
                            android:background="@color/white"
                            android:hint="  请输入新邮箱..."
                            android:maxLines="1"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:visibility="gone"
                            android:background="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/me_resetemail_shownewemail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">


                        <EditText
                            android:paddingLeft="5dp"
                            android:id="@+id/me_resetemail_varcode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_edittext"
                            android:maxLines="1"
                            android:textSize="15dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/me_resetemail_getvarcode"
                            android:background="@drawable/bg_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:text="获取验证码"/>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/me_resetemail_submit"
                        android:textColor="@color/white"
                        android:text="修改邮箱"
                        android:background="@drawable/bg_button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>