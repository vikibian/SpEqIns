<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/card_background_selector"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/detction_item_text_leftnum_2"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="123"
                    android:layout_width="15dp"
                    android:layout_height="match_parent" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CCCED2D5"
                android:layout_gravity="center_horizontal"/>


            <LinearLayout
                android:id="@+id/ll_ttt"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.neu.test.layout.MyTextView
                        android:layout_marginTop="2dp"
                        android:layout_weight="8"
                        android:id="@+id/detction_item_text_context_2"
                        android:textColor="@color/black"
                        android:textSize="?fontsize_1"
                        android:ellipsize="marquee"
                        android:text="管道安全"
                        android:singleLine="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout

                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/detction_item_imageview_error_2"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_error_outline_blue_300_24dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                    </RelativeLayout>

                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:text="合格"
                            android:id="@+id/rectify_item_status_unrectify_2"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <CheckBox
                            android:text="不合格"
                            android:id="@+id/rectify_item_status_rectified_2"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <CheckBox
                            android:text="整改合格"
                            android:id="@+id/rectify_item_status_rectifyliving_2"
                            android:layout_weight="1"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/detction_item_image_right_2"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>

                    </RelativeLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>





