<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/card_background_selector"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recify_item_textview_leftnum"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="1"
                android:layout_width="10dp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCED2D5"
            android:layout_gravity="center_horizontal"/>
          

        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/recify_lin"
            android:layout_margin="3dp"
            android:padding="2dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.neu.test.layout.MyTextView
                android:layout_weight="2"
                android:id="@+id/recify_item_text_context"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="?fontsize_1"
                android:text="管道安全"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:focusable="false"
                        android:text="整改不合格"
                        android:id="@+id/recify_item_status_unqualified"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <CheckBox
                        android:focusable="false"
                        android:text="整改合格"
                        android:id="@+id/recify_item_status_recifyqualified"
                        android:layout_weight="1"
                        android:textSize="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:padding="5dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/recify_list_item_error"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_error_outline_blue_300_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/recify_item_attach"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_attach_file_green_700_24dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/recify_item_attach_num"
                        android:text="12"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/recify_item_arrowRight"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
