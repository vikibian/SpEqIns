<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <!--表示控件默认的颜色-->
        <item name="colorControlNormal">@android:color/black</item>
        <!--表示控件被激活时的颜色-->
        <item name="colorControlActivated">@android:color/holo_orange_dark</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@color/lightblue</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item><!-- 主要是这个起作用,修改默认返回键的颜色-->
        <!-- 设置Menu窗口不覆盖Toolbar视图 -->
        <item name="overlapAnchor">false</item>
    </style>

    <style name="NoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="QMNoBar" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/textsize</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/white</item>

        <item name="colorControlActivated">@color/skyblue</item>

    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme_Small" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontsize_1">@dimen/font_size_16sp</item>
        <item name="fontsize_2">@dimen/font_size_15sp</item>
        <item name="fontsize_3">@dimen/font_size_14sp</item>
    </style>
    <style name="Theme_Medium" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontsize_1">@dimen/font_size_18sp</item>
        <item name="fontsize_2">@dimen/font_size_17sp</item>
        <item name="fontsize_3">@dimen/font_size_16sp</item>
    </style>
    <style name="Theme_Large" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontsize_1">@dimen/font_size_20sp</item>
        <item name="fontsize_2">@dimen/font_size_18sp</item>
        <item name="fontsize_3">@dimen/font_size_17sp</item>
    </style>

    <style name="Theme_Large_Small" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontsize_1">@dimen/font_size_22sp</item>
        <item name="fontsize_2">@dimen/font_size_20sp</item>
        <item name="fontsize_3">@dimen/font_size_18sp</item>
    </style>
    <style name="Theme_Large_Media" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontsize_1">@dimen/font_size_24sp</item>
        <item name="fontsize_2">@dimen/font_size_22sp</item>
        <item name="fontsize_3">@dimen/font_size_20sp</item>
    </style>

</resources>
