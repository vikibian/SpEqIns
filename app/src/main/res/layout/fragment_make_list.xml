<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".fragment.MakeListFragment">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ScrollView
        android:layout_above="@+id/button_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:textSize="15dp"
              android:textAlignment="center"
              android:layout_weight="1"
              android:text="方案名称: "
              android:textColor="@color/black"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

            <EditText
              android:id="@+id/generate_edittext_fanganname"
              android:textSize="13dp"
              android:hint="请输入方案名称，不可为自定义"
              android:paddingLeft="5dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:layout_marginLeft="5dp"
              android:layout_weight="2.52"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

          </LinearLayout>

          <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:textSize="15dp"
              android:textAlignment="center"
              android:layout_weight="1"
              android:text="方案描述: "
              android:textColor="@color/black"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

            <EditText
              android:id="@+id/generate_edittext_fangan"
              android:textSize="13dp"
              android:hint="请输入方案描述..."
              android:paddingLeft="5dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:layout_marginLeft="5dp"
              android:layout_weight="2.52"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

          </LinearLayout>

          <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:background="@drawable/bg_drafttask"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:textSize="15dp"
              android:textAlignment="center"
              android:layout_weight="1"
              android:text="设备种类: "
              android:textColor="@color/black"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

            <com.jaredrummler.materialspinner.MaterialSpinner
              android:id="@+id/generate_spinner_devtype"
              style="@android:style/Widget.Spinner"
              android:layout_marginLeft="5dp"
              android:textAlignment="textStart"
              android:layout_weight="2.5"
              android:background="@drawable/bg_drafttask"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />

          </LinearLayout>

          <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:textSize="15dp"
              android:textAlignment="center"
              android:layout_weight="1"
              android:text="企业名称: "
              android:textColor="@color/black"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

            <TextView
              android:id="@+id/generate_textview_companyname"
              android:textSize="13dp"
              android:paddingLeft="5dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:layout_marginLeft="5dp"
              android:layout_weight="2.52"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

          </LinearLayout>

          <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:gravity="center"
              android:layout_gravity="center_vertical"
              android:textSize="15dp"
              android:textAlignment="center"
              android:layout_weight="1"
              android:text="制定人员: "
              android:textColor="@color/black"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

            <TextView
              android:id="@+id/generate_textview_person"
              android:textSize="13dp"
              android:paddingLeft="5dp"
              android:paddingTop="9dp"
              android:paddingBottom="9dp"
              android:background="@drawable/bg_drafttask"
              android:layout_marginLeft="5dp"
              android:layout_weight="2.52"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

          </LinearLayout>


        </LinearLayout>


      </ScrollView>

      <LinearLayout
        android:id="@+id/button_linear"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/generate_button_addCheckItem"
          android:textColor="@color/white"
          android:text="添加检查项"
          android:background="@drawable/bg_button2"
          android:layout_weight="1"
          android:layout_marginRight="3dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content" />


        <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/generate_button_sure"
          android:textColor="@color/white"
          android:text="制定"
          android:layout_marginLeft="3dp"
          android:background="@drawable/bg_button2"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content" />

      </LinearLayout>

    </RelativeLayout>



  </LinearLayout>



</FrameLayout>
